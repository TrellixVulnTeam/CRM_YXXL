<html>
<head></title>
    <%include layout/library.ejs%>

</head>
<body>
<body class="skin-blue fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <%include layout/header.ejs%>
    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">
            <div class="col-md-10">
                <div class="box box-solid box-primary">
                    <div class="box-header with-border">
                        LIST OF EXTERNAL CODES
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-hover skip" id="list-product" style="font-size: 13px">
                                    <tr>
                                        <th>#</th>
                                        <th>External Product Code</th>
                                        <th>Customer</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                    <%for (var i=0; i< externals.length; i++){%>
                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=externals[i].external_product_id%></td>
                                        <td><%=externals[i].customer.name%></td>
                                        <td><%=externals[i].description%></td>
                                        <td>
                                            <div class="btn-group-vertical">
                                                <button type="button" class="btn btn-flat btn-edit">Edit</button>
                                            </div>
                                            <div class="btn-group-vertical">
                                                <button type="button" class="btn btn-flat btn-danger">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                    <%}%>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- /.content -->
    </div>
    <%include layout/footer.ejs%>


</div>
<!-- ./wrapper -->

</body>

</body>
</html>