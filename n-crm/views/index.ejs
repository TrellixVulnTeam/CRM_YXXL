<html>
<head><title><%= title %></title>
    <%include layout/library.ejs%>
</head>
<body>
<body class="skin-blue fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <%include layout/header.ejs%>
    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">
            <div class="col-md-10">
                <div class="box box-solid box-primary">
                    <div class="box-header with-border">
                        LIST OF Customers
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-hover skip" style="font-size: 13px">
                                    <tr>
                                        <th>#</th>
                                        <th>Customer Last Name</th>
                                        <th>Customer First Name</th>
                                        <th>Customer Email</th>
                                        <th>Customer Contact Phone</th>
                                        <th>Customer Address</th>
                                    </tr>
                                    <%for (var i=0; i< customers.length; i++){%>
                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=customers[i].last_name%></td>
                                        <td><%=customers[i].first_name%></td>
                                        <td><%=customers[i].email%></td>
                                        <td><%=customers[i].contact_phone%></td>
                                        <td><%=customers[i].adress%></td>
                                        <td>
                                            <div class="btn-group-vertical">
                                                <button type="button" onclick="editCustomer('<%=customers[i].last_name%>','<%=customers[i].first_name%>', '<%=customers[i].email%>','<%=customers[i].contact_phone%>','<%=customers[i].adress%>')" class="btn btn-flat btn-edit">Edit</button>
                                            </div>
                                            <div class="btn-group-vertical">
                                                <button type="button" onclick="removeCustomer('<%=customers[i]._id%>')" class="btn btn-flat btn-danger">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                    <%}%>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%include layout/footer.ejs%>
</div>
<!-- ./wrapper -->
<script type="text/javascript">
    function removeCustomer (_id){

        bootbox.confirm({

            title: "DELETE THE PRODUCT's INFORMATION ",
            message: 'DO YOU WANT TO DELETE THIS PRODUCT?',
            size: 'large',
            onEscape: function() {
                bootbox.hideAll();
            },
            callback: function(result){
                if (result) {
                    $.ajax({
                        type: "post",
                        url: '/delete-customer',
                        dataType : 'text',
                        data: {
                            _id: _id
                        },
                        success: function(response) {
                            if (response == "OK") {
                                location.reload();
                            } else if (response.toLowerCase().indexOf("400") >= 0) {
                                bootbox.alert(response);
                            }
                            else {
                                bootbox.alert("500: WE CAN DELETE IT");
                            }
                        }
                    });
                }
            }
        });
    }
</script>
</body>

</body>
</html>