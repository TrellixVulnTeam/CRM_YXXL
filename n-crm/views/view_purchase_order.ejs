                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label><font size="2.5px;">Provision of Contract :</font><font size="4px;">  </font></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="box-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <table border="1" class="table table-hover skip">
                                                    <tr>
                                                        <th><font size="2px;">#</font></th>
                                                        <th><font size="2px;">Pro ID</font></th>
                                                        <th><font size="2px;">Pro Name</font></th>
                                                        <th><font size="2px;">Description</font></th>
                                                        <th><font size="2px;">Quantity</font></th>
                                                        <th><font size="2px;">Cost</font></th>
                                                        <th><font size="2px;">Amount</font></th>

                                                    </tr>
                                                    <%var i = 1;
                                                        po.products.forEach(function (p) {
                                                    %>

                                                    <tr>
                                                        <td><%=i++ %></td>
                                                        <td><%= p.productID%></td>
                                                        <td><%= p.product_name %></td>

                                                        <td><%= p.description %></td>
                                                        <td><%= p.quantity %></td>
                                                        <td><%= p.costPerItem %></td>
                                                        <td><%= p.amount %></td>

                                                    </tr>
                                                    <%  });%>
                                                            <tr>
                                                                <td colspan="6" align="right"><font size="2.5px;"><b>AMOUNT</b></font></td>
                                                                <td colspan="1"><font size="3px;"><b><%= po.totalAmount%></b> </font></td>

                                                            </tr>
                                                            <tr>
                                                                <td colspan="6" align="right"><b><font size="2.5px;">VAT (10%)</font></b></td>
                                                                <td colspan="1"><b>&nbsp;&nbsp;&nbsp;<font size="3px;"><%=po.vat%>%</font></b> </td>

                                                            </tr>
                                                            <tr>
                                                                <td colspan="6" align="right"><b><font size="2.5px;">TOTAL</font></b></td>
                                                                <td colspan="1"><b><font size="3px;"><%=po.totalAfterVAT%></font></b> </td>

