    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">

            <div align="right"><button onclick="printSelection(document.getElementById('test'));return false"><span class='glyphicon glyphicon-print' ></span></button></div>

            <div class="row"  style=" margin-top: 50px; ">

                        <div id ='test'>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-8">
                                <div class="box box-solid box-primary">
                                    <div class="box-body">
                                        <div align="left">
                                            <font size="2.5 px;">
                                                <b>E-CRM (----Name of company)</b><br>
                                                3612 Bremerstra√üe 24118 Kiel. <br>
                                                Telephone  : 049 15225772527 <br>
                                                Tax Number         : .............<br>
