<html>
<head></title>
    <%include layout/library.ejs%>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
<body class="skin-blue fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <%include layout/header.ejs%>
    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">
            <div class="col-md-10">
                <div class="box box-solid box-primary">
                    <div class="box-header with-border">
                        LIST OF PURCHASE ORDER
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-hover skip" id="list-product" style="font-size: 13px">
                                    <tr>
                                        <th>#</th>
                                        <th>PO Number</th>
                                        <th>Name</th>
                                        <th>Created Date</th>
                                        <th>Customer</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                    <%for (var i=0; i< pos.length; i++){%>
                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=pos[i].poNumber%></td>
                                        <td><%=pos[i].poName%></td>
                                        <td><%=utility.formatDate(pos[i].createdDate)%></td>
                                        <td><%=pos[i].customer.name%></td>
                                        <td><%=pos[i].description%></td>
                                        <td>
                                            <a href="/print-purchase-order?poID=<%=pos[i]._id%>">Look</a>
                                        </td>
                                    </tr>
                                    <%}%>
                                </table>

                            </div>
                        </div>
                        <% if (pages > 0) { %>
                        <ul class="pagination text-center">
                            <% if (current == 1) { %>
                            <li class="disabled"><a>First</a></li>
                            <% } else { %>
                            <li><a href="/purchase-order-list/1">First</a></li>
                            <% } %>
                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                            <% if (i !== 1) { %>
                            <li class="disabled"><a>...</a></li>
                            <% } %>
                            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                            <% } else { %>
                            <li><a href="/purchase-order-list/<%= i %>"><%= i %></a></li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a>...</a></li>
                            <% } %>
                            <% } %>
                            <% if (current == pages) { %>
                            <li class="disabled"><a>Last</a></li>
                            <% } else { %>
                            <li><a href="/purchase-order-list/<%= pages %>">Last</a></li>
                            <% } %>
                        </ul>
                        <% } %>
                    </div>
                </div>
            </div>
        </section><!-- /.content -->
    </div>
    <%include layout/footer.ejs%>

    <!-- /.content-wrapper -->
    <script type="text/javascript">

    </script>

</div>
<!-- ./wrapper -->

</body>

</body>
</html>