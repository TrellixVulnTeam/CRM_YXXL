
<html>
<head><title><%= (typeof title != "undefined" ? title : "") %></title>
    <%include ./layout/library.ejs%>
</head>
<body>
<body class="skin-blue fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <%include ./layout/header.ejs%>
    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include ./layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Manage Employers
               <!-- <small>advanced tables</small> -->
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Manage</a></li>
                <li class="active">Employers</li>
            </ol>
        </section>


        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-14">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Registered Members</h3>

                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="manage" class="table table-bordered table-stripped abc">
                                <thead>
                                <tr>
                                    <th>No.</th><th>User Name</th><th>Last Name</th><th>First Name(s)</th><th>Email</th>
                                    <th>Role</th><th>Department</th>
                                </tr>
                                <%for (var i=0; i< employees.length; i++){%>
                                <tr>
                                    <td><%=i+1%></td>
                                    <td><%=employees[i].username%></td>
                                    <td><%=employees[i].last_name%></td>
                                    <td><%=employees[i].first_name%></td>
                                    <td><%=employees[i].email%></td>
                                    <td><%=employees[i].role%></td>
                                    <td><%=employees[i].department%></td>
                                    <td>

                                        <FORM METHOD="LINK" ACTION="/emp-manage">
                                        <div class="btn-group-vertical">
                                            <button type="submit" onclick="()" class="btn-link">Edit</button>
                                        </div>

                                        <div class="btn-group-vertical">
                                            <button type="button" onclick="empRemove('<%=employees[i]._id%>','<%=employees[i].username%>')" class="btn-link">Delete</button>
                                        </div>
                                        </FORM>
                                    </td>
                                </tr>
                                <%}%>
                                </thead>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </section><!-- /.content -->


        </section><!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <script type="text/javascript">
        function empRemove (_id,username) {
            bootbox.confirm({
                title: "Delete Membership ",
                message: 'Are you sure! you want to delete employee '+ '"'+ username +'"'+' information?',
                size: 'medium',
                onEscape: function () {
                    bootbox.hideAll();
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            type: "post",
                            url: '/delete-employee',
                            dataType: 'text',
                            data: {
                                _id: _id
                            },
                            success: function (response) {
                                if (response == "OK") {
                                    location.reload();
                                } else if (response.toLowerCase().indexOf("400") >= 0) {
                                    bootbox.alert(response);
                                }
                                else {
                                    bootbox.alert("500: Not Successful ");
                                }
                            }
                        });
                    }
                }

            });
        }

        function empEdit (_id,username) {
            bootbox.dialog({
                title: "Delete Membership ",
                message: 'Are you sure! you want to delete employee ' + '"' + username + '"' + ' information?',
                size: 'medium',
                onEscape: function () {
                    bootbox.hideAll();
                },
            });
        };
    </script>
    <%include ./layout/footer.ejs%>
</div>
<!-- ./wrapper -->
</body>
</body>
</html>
