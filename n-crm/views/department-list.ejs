
<html>
<head><title><%= (typeof title != "undefined" ? title : "EmpView") %></title>
    <%include ./layout/library.ejs%>
</head>
<body>
<body class="skin-blue fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <%include ./layout/header.ejs%>
    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include ./layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Manage Departments
                    <!-- <small>advanced tables</small> -->
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Manage</a></li>
                    <li class="active">Departments</li>
                </ol>
            </section>


            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-14">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Departments</h3>

                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="manage" class="table table-bordered table-stripped abc">
                                    <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Department</th>
                                        <th>Location</th>
                                    </tr>
                                    <%for (var i=0; i< departments.length; i++){%>
                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=departments[i].name%></td>
                                        <td><%=departments[i].location%></td>
                                        <td>
                                            <div class="btn-group-vertical">
                                                <button type="button" onclick="empRemove('<%=departments[i]._id%>','<%=departments[i].name%>')" class="btn-link">Delete</button>
                                            </div>

                                        </td>
                                    </tr>
                                    <%}%>
                                    </thead>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->


        </section><!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <script type="text/javascript">
        <!-- Department Record Delete  -->
        function empRemove (_id,department) {
            bootbox.confirm({
                title: "Delete Membership ",
                message: 'Are you sure! you want to delete employee '+ '"'+ department +'"'+' information?',
                size: 'medium',
                onEscape: function () {
                    bootbox.hideAll();
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            type: "post",
                            url: '/delete-department',
                            dataType: 'text',
                            data: {
                                _id: _id
                            },
                            success: function (response) {
                                if (response == "OK") {
                                    location.reload();
                                } else if (response.toLowerCase().indexOf("400") >= 0) {
                                    bootbox.alert(response);
                                }
                                else {
                                    bootbox.alert("500: Not Successful ");
                                }
                            }
                        });
                    }
                }

            });
        }

    </script>
    <%include ./layout/footer.ejs%>
</div>


<!-- ./wrapper -->
</body>
</body>
</html>
