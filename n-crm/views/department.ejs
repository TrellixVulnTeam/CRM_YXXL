<html>
<head><title><%= (typeof title != "undefined" ? title : "") %></title>
    <%include ./layout/library.ejs%>
</head>
<body>
<body class="skin-blue fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    <%include ./layout/header.ejs%>
    <!-- =============================================== -->

    <!-- Left side column. contains the sidebar -->
    <%include ./layout/menu.ejs%>
    <!-- =============================================== -->

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 265px;">
        <!-- Content Header (Page header) -->

        <!-- =============================================== -->

        <div style="padding-top: 10px"></div>
        <!-- Main content -->
        <section class="content">
            <div class="register-logo">
                <a href=""><b>New</b>Department</a>
            </div>
            <div class="register-box-body">
                <p class="login-box-msg">Register a new Department</p>
                <form action="/depregister" method="post">
                    <div class="form-group has-feedback">
                        <input type="text" name="department" class="form-control" placeholder="Department">
                        <span class="glyphicon glyphicon-briefcase form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" name="location" class="form-control" placeholder="Location">
                        <span class="glyphicon glyphicon-home form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-16">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                        </div><!-- /.col -->
                    </div>
                </form>
            </div><!-- /.form-box -->


            <script>
                $(function () {
                    $('input').iCheck({
                        checkboxClass: 'icheckbox_square-blue',
                        radioClass: 'iradio_square-blue',
                        increaseArea: '20%' // optional
                    });


                });
            </script>

        </section><!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%include ./layout/footer.ejs%>
</div>
<!-- ./wrapper -->

</body>

</body>
</html>

